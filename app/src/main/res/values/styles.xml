<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_day</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:textColor">#2F2F2F</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">@android:color/white</item>
    </style>
    <style name="ToolbarTextAppearance.Title">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="ToolbarTextAppearance.Subtitle">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="MyToolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>
